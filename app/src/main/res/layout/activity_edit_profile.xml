<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EditProfile"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_editProf_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="click_edit_back"
            app:srcCompat="@drawable/ic_arrow_backward_gray" />

        <TextView
            android:id="@+id/txt_myAcctHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="My Account"
            android:textSize="28dp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/my_account_logo"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                app:srcCompat="@drawable/logo" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="First Name"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_fname"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="255"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_lname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="Last Name"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_lname"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="255"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="Phone No."
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_phone_num"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="Street"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_street"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_barangay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="Barangay"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_barangay"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="City"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txt_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:fontFamily="@font/m_plus_rounded_1c_regular"
                        android:text="Province"
                        android:textColor="@color/dark_gray"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_province"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FF0000"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="Sample Error"
                />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cancel_edit"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/custom_btn_gray"
                        android:elevation="4dp"
                        android:fontFamily="@font/m_plus_rounded_1c_medium"
                        android:onClick="click_cancel_edit"
                        android:text="CANCEL"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_save_edit"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/custom_btn_blue"
                        android:elevation="4dp"
                        android:fontFamily="@font/m_plus_rounded_1c_bold"
                        android:text="SAVE"
                        android:textSize="20sp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>