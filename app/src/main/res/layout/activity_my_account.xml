<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MyAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_myAcc_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="click_myAcc_back"
            app:srcCompat="@drawable/ic_arrow_backward_gray" />

        <TextView
            android:id="@+id/txt_myAcctHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="My Account"
            android:textSize="28dp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/m_plus_rounded_1c_extrabold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/logo" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txt_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="First Name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular"/>

            <TextView
                android:id="@+id/view_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="first_name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/txt_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Last Name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular" />

            <TextView
                android:id="@+id/view_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="last_name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Phone No."
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular"/>

            <TextView
                android:id="@+id/view_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="phone_number"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Address"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular"/>

            <TextView
                android:id="@+id/view_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="address"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Email"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular" />

            <TextView
                android:id="@+id/view_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="email_address"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:text="Password"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_regular" />

            <TextView
                android:id="@+id/view_password"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="password_hidden"
                android:inputType="textPassword"
                android:maxLength="8"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"/>

            <TextView
                android:id="@+id/btn_change_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/m_plus_rounded_1c_bold"
                android:onClick="click_change_pw"
                android:text="change"
                android:textColor="#2196F3" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_myAcc_deleteAcc"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Delete Account"
                android:background="@drawable/custom_btn_gray"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/btn_myAcc_editProf"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Edit Profile"
                android:background="@drawable/custom_btn_blue"
                android:textSize="18sp"
                android:fontFamily="@font/m_plus_rounded_1c_bold"
                android:onClick="click_edit_profile"
                android:elevation="4dp"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>