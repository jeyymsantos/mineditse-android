<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignUpScreen"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_businessName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:text="Mine Ditse"
                android:textColor="#191970"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:text="Sign up to browse products"
                android:textColor="#616161"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/illustration_shopping2"
                android:layout_width="320dp"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/undraw_window_shopping_re_0kbm" />

            <EditText
                android:id="@+id/signup_input_fullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="15dp"
                android:drawableTint="#FFA6A6A6"
                android:ems="10"
                android:fontFamily="@font/m_plus_rounded_1c_regular"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:textColor="#000000"
                android:textColorHint="#FFA6A6A6"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signup_input_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:drawableTint="#FFA6A6A6"
                android:ems="10"
                android:fontFamily="@font/m_plus_rounded_1c_regular"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:textColor="#000000"
                android:textColorHint="#FFA6A6A6"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signup_create_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:drawableTint="#FFA6A6A6"
                android:ems="10"
                android:fontFamily="@font/m_plus_rounded_1c_regular"
                android:hint="Create a password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="#000000"
                android:textColorHint="#FFA6A6A6"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signup_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="15dp"
                android:drawableTint="#FFA6A6A6"
                android:ems="10"
                android:fontFamily="@font/m_plus_rounded_1c_regular"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="#000000"
                android:textColorHint="#FFA6A6A6"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textAlignment="textEnd"
                android:id="@+id/signup_view_error"
                android:visibility="gone"
                android:textColor="#D30000"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#00A3E8"
                android:fontFamily="@font/m_plus_rounded_1c_extrabold"
                android:onClick="click_register"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_haveAnAcct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/m_plus_rounded_1c_regular"
                    android:text="Already have an account?"
                    android:textColor="#616161"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txtbtn_createAcct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/m_plus_rounded_1c_bold"
                    android:onClick="click_signin"
                    android:text="Sign in."
                    android:textColor="#00A3E8"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>