<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_orders_cardView"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="5dp">

        <LinearLayout
            android:id="@+id/my_orders_linear_h_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_orders_cart_icon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/nav_ic_cart" />

            <LinearLayout
                android:id="@+id/my_orders_linear_v_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_orders_orderID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="order-id"
                    android:fontFamily="@font/m_plus_rounded_1c_bold"
                    android:textSize="22sp"
                    android:textColor="@color/dark_blue"/>

                <TextView
                    android:id="@+id/my_orders_order_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="order-total"
                    android:fontFamily="@font/m_plus_rounded_1c_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/my_orders_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:textAlignment="textEnd"
                android:text="order-status"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:textSize="20sp"
                android:textColor="@color/bright_blue" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>