<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="nav_drawer_custom_style">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:fontFamily">@font/m_plus_rounded_1c_medium</item>
    </style>

    <style name="toolbar_custom_title">
        <item name="android:fontFamily">@font/m_plus_rounded_1c_extrabold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

</resources>